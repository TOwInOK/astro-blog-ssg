---
import type { CollectionEntry } from "astro:content";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import BareCode from "@components/BareCode.astro";
import Button from "@components/Button.astro";
import { Image } from "astro:assets";
import BothHands from "@assets/both_hands.png";

type Props = CollectionEntry<"about">["data"];

const { skills, title, description } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <body class="relative bg-black min-h-screen">
        <Header />
        <main class="mx-auto max-w-3xl px-4 py-12 pt-40 z-12">
            <article class="space-y-16">
                <div
                    class="tracking-wide font-bold lg:text-2xl font-rubik-mono prose prose-invert prose-img:rounded-xl lg:prose-lg xl:prose-xl mx-auto"
                >
                    <slot />
                </div>

                <div>
                    <div class="flex flex-wrap gap-2 w-full justify-evenly">
                        {skills.map((skill) => <Button>{skill}</Button>)}
                    </div>
                </div>
            </article>
        </main>
        <div
            class="z-1 w-full justify-center items-center flex flex-col overflow-clip"
        >
            <Button
                class="translate-y-40 rotate-90 leading-3.5 font-bold tracking-[10px] animate-pulse"
                >Portfolio</Button
            >
            <Image class="" src={BothHands} alt="Both Hands" />
        </div>
        <div>
            <BareCode
                class="absolute scale-x-200 bottom-0 mask-t-from-red-200 mask-t-to-90% mask-r-to-130% mask-l-to-130% text-accent -z-100"
            />
        </div>
    </body>
</html>
